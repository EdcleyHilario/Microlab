@page
@using Microlab.web.Areas.Identity.Pages.Account
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar senha";
    Layout = "~/Views/Shared/_Layout.cshtml"; // ou null
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Esqueceu sua senha?</h2>
            <p class="text-muted text-center">Informe seu e-mail e enviaremos um link para redefinir sua senha.</p>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">E-mail</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Enviar link de redefinição</button>
            </form>

            <div class="text-center mt-3">
                <a asp-page="./Login">Voltar ao login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
