@using Microlab.web.Models
@model AddPacienteViewModel

@{
    ViewData["Title"] = "Cadastrar Paciente";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h2 class="mb-4">Cadastro de Paciente - Clínica: @Model.ClinicaNome</h2>

<form asp-action="Add" method="post" class="shadow-sm p-4 bg-light rounded">
    <!-- Campo oculto para manter o ClinicaId -->
    <input type="hidden" asp-for="ClinicaId" />

   
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do paciente" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Idade" class="form-label">Idade</label>
            <input asp-for="Idade" class="form-control" />
            <span asp-validation-for="Idade" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Rg" class="form-label">RG</label>
            <input asp-for="Rg" class="form-control" />
            <span asp-validation-for="Rg" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Cpf" class="form-label">CPF</label>
            <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" />
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-success">Cadastrar Paciente</button>
    <a asp-action="Index" asp-route-clinicaId="@Model.ClinicaId" class="btn btn-secondary">Voltar</a>
</form>

<hr class="my-4" />

<h3>Ultimos cadastrados</h3>
@if (Model.Pacientes != null && Model.Pacientes.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Data Solicitação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var paciente in Model.Pacientes)
            {
                <tr>
                    <td>@paciente.Nome</td>
                    <td>@paciente.Cpf</td>
                    <td>@paciente.DataSolicitacao.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@paciente.PacienteId" class="btn btn-warning btn-sm">Editar</a>
                        <form asp-action="Delete" asp-route-id="@paciente.PacienteId" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nenhum paciente cadastrado ainda.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
