@using Microlab.web.Models.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@model Paciente

<h2 class="mb-4">Editar Solicitação de Exame</h2>
@if(Model is null)
{
    <p>Não existe nenhuma solicitação cadastrada.</p>
}
else
{
    <form method="post" class="needs-validation" novalidate>
        <div class="row mb-2">
            <div class="col">
                <label asp-for="PacienteId" class="form-label"></label>
                <input asp-for="PacienteId" class="form-control" readonly />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Idade" class="form-label"></label>
                <input asp-for="Idade" class="form-control" />
            </div>
            <div class="col-md-3">
                <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                <input asp-for="DataNascimento" class="form-control" type="date" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Solicitante" class="form-label"></label>
                <input asp-for="Solicitante" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Protocolo" class="form-label"></label>
                <input asp-for="Protocolo" class="form-control" />
                <span asp-validation-for="Protocolo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Rg" class="form-label">RG</label>
                <input asp-for="Rg" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Cpf" class="form-label">CPF</label>
                <input asp-for="Cpf" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="DataSolicitacao" class="form-label">Data da Solicitação</label>
                <input asp-for="DataSolicitacao" class="form-control" type="date" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Exame" class="form-label"></label>
                <select asp-for="Exame" class="form-select">
                    <option value="">Selecione</option>
                    <option value="SUMÁRIO DE URINA">SUMÁRIO DE URINA</option>
                    <option value="PARACITOLÓGICO DE FEZES">PARACITOLÓGICO DE FEZES</option>
                </select>
                <span asp-validation-for="Exame" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Material" class="form-label"></label>
                <select asp-for="Material" class="form-select">
                    <option value="">Selecione</option>
                    <option value="URINA">URINA</option>
                    <option value="FEZES">FEZES</option>
                </select>
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <input asp-for="ClinicaId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" type="hidden" readonly />
        </div>
        <div class="d-flex justify-content-end">
        <div class="row mb-3">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
            <div class="col-md-4">
                    <a asp-controller="Paciente" asp-action="Add" class="btn btn-outline-primary">Cancelar</a>
            </div>
        </div>
        </div>
    </form>
}
